<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="200dp" android:background="@color/colorPrimary" >

    <LinearLayout android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="190dp" android:orientation="horizontal" >

        <ImageView
            android:layout_width="90dp"
            android:layout_marginLeft="20px"
            android:layout_height="100dp" android:src="@drawable/sohbinewlogo2"/>

        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginLeft="20px"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="5dp" android:textStyle="bold"
                android:text="TRANSMITTAL SYSTEM"
                android:textColor="#F0F8FF"
                android:textSize="18dp" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="5dp"
                android:text="SOHBI KOHGEI (PHILS.), INC."
                android:textColor="#F0F8FF"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>